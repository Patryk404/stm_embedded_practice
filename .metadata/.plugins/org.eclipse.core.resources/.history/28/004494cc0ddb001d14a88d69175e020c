#include <stdint.h>
// bit_word_offset = (byte_offset × 32) + (bit_number × 4)
// bit_word_addr = bit_band_base + bit_word_offset
void bit_banding_func(void){
	__asm volatile("LDR R0,=#0x01");
	__asm volatile("LDR R1,=#0x22002000");
	__asm volatile("STR R0,[R1]");
}

int main(void)
{
    /* Loop forever */
	bit_banding_func();
	for(;;);
}
